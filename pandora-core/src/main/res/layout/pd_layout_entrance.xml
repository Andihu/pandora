<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="#f2f1ee">

    <TextView
        android:id="@+id/entrance_more"
        style="@style/pd_entrance_text"
        android:drawableTop="@drawable/pd_more"
        android:text="more" />

    <TextView
        android:id="@+id/entrance_network"
        style="@style/pd_entrance_text"
        android:drawableTop="@drawable/pd_network"
        android:text="network" />

    <TextView
        android:id="@+id/entrance_sandbox"
        style="@style/pd_entrance_text"
        android:drawableTop="@drawable/pd_disk"
        android:text="sandbox" />

    <TextView
        android:id="@+id/ui_select"
        style="@style/pd_entrance_text"
        android:drawableTop="@drawable/pd_select"
        android:text="select" />


    <TextView
        android:id="@+id/entrance_close"
        style="@style/pd_entrance_text"
        android:drawableTop="@drawable/pd_close"
        android:text="close" />
</LinearLayout>