<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="#f2f1ee">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/entrance_config"
            style="@style/pd_entrance_text"
            android:drawableTop="@drawable/pd_config"
            android:text="setting" />

        <TextView
            android:id="@+id/ui_hierarchy"
            style="@style/pd_entrance_text"
            android:drawableTop="@drawable/pd_layer"
            android:text="hierarchy" />

        <TextView
            android:id="@+id/ui_grid"
            style="@style/pd_entrance_text"
            android:drawableTop="@drawable/pd_grid"
            android:text="gridline" />

        <TextView
            android:id="@+id/ui_window"
            style="@style/pd_entrance_text"
            android:drawableTop="@drawable/pd_windows"
            android:text="activity" />

        <TextView
            android:id="@+id/ui_baseline"
            style="@style/pd_entrance_text"
            android:drawableTop="@drawable/pd_ruler"
            android:text="baseline" />

        <TextView
            android:id="@+id/ui_route"
            style="@style/pd_entrance_text"
            android:drawableTop="@drawable/pd_map"
            android:text="navigate" />

        <TextView
            android:id="@+id/ui_back"
            style="@style/pd_entrance_text"
            android:drawableTop="@drawable/pd_back"
            android:text="goBack" />


    </LinearLayout>
</HorizontalScrollView>